{
  "compilerOptions": {
    "module": "esnext", 
    "target": "es2019", 
    "noImplicitAny": true,
    "sourceMap": false,
    "strict": true,
    "emitDecoratorMetadata": true, 
    "experimentalDecorators": true, 
    "declaration": false,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node", 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "baseUrl": ".",
   },
  "exclude": ["node_modules", "dist"]
}